{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "System": "Information",
            "Microsoft": "Information",
            "Microsoft.Hosting.Lifetime": "Information"
        },
        "Console": {
            "FormatterOptions": {
                "SingleLine": true,
                "TimestampFormat": "[yyyy/mm/dd HH:mm:ss]",
                "UseUtcTimestamp": true
            }
        }
    },
    "ForwardProxies": {
        "Enabled": "true",
        "BasePath": "/Pharmanet",
        "KnownProxies": []
    },
    "AllowedHosts": "*",
    "SwaggerSettings": {
        "RoutePrefix": "swagger",
        "Info": {
            "Title": "Health.PharmaNet MedicationDispense API documentation",
            "Description": "Provides API documentation for the eRx API MedicationDispense service.",
            "License": {
                "Name": "Apache 2.0",
                "Url": "https://www.apache.org/licenses/LICENSE-2.0.html"
            }
        }
    },
    "Hl7v2Authorization": {
        "MessageConfig": [
            {
                "Name": "TMU_01_REQUEST-*",
                "Purpose": "Medication Update Request",
                "MessageType": "ZPN",
                "Scope": "system/MedicationDispense.write system/*.write",
                "MessageSegments": [
                    {
                        "SegmentName": "ZZZ",
                        "SegmentFields": [
                            {
                                "Index": "1",
                                "Value": "TMU"
                            }
                        ]
                    },
                    {
                        "SegmentName": "ZCA",
                        "SegmentFields": [
                            {
                                "Index": "3",
                                "Value": "01"
                            }
                        ]
                    }
                ]
            },
            {
                "Name": "TMU_11_REQUEST-*",
                "Purpose": "Medication Update Reversal Request",
                "MessageType": "ZPN",
                "Scope": "system/MedicationDispense.write system/*.write",
                "MessageSegments": [
                    {
                        "SegmentName": "ZZZ",
                        "SegmentFields": [
                            {
                                "Index": "1",
                                "Value": "TMU"
                            }
                        ]
                    },
                    {
                        "SegmentName": "ZCA",
                        "SegmentFields": [
                            {
                                "Index": "3",
                                "Value": "11"
                            }
                        ]
                    }
                ]
            }
        ]
    },
    "OpenIdConnect": {
        "Audience": "pharmanet",
        "Authority": "{keycloak realm license plate URL}",
        "ClaimsIssuer": "{keycloak realm license plate URL}",
        "Scope": "system/MedicationDispense.write system/*.write system/MedicationDispense.read system/*.read"
    },
    "PharmanetProxy": {
        "Endpoint": "{pharmanet_endpoint}",
        "Password": "{password}",
        "Username": "{username}",
        "ClientCertificatePath": "/usr/local/pharmanet/d1pnetgwy.pfx",
        "ClientCertificatePassword": "{cert password}",
        "Base64EncodeHl7Message": "true"
    }
}
